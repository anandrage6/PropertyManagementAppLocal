<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorButtonNormal"
        tools:ignore="MissingConstraints">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/zeroLinear"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="Name"
               android:layout_marginStart="10dp"
               android:textAlignment="textStart"
               android:textSize="20sp"
               android:gravity="center"
               android:textStyle="bold"
               android:layout_marginLeft="10dp"
               tools:ignore="RtlCompat" />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/firstlinear"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_below="@id/zeroLinear"
           android:background="@color/cardview_light_background"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_person"
               android:layout_marginStart="10dp"
               android:layout_marginLeft="10dp" />
           <TextView
               android:id="@+id/tenantName"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginStart="10dp"
               android:hint="Name"
               android:textSize="15dp"
               android:textAlignment="textStart"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginLeft="10dp" />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/secondlinear"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_below="@id/firstlinear"
           android:background="@color/cardview_light_background"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_call"
               android:layout_marginStart="10dp"
               android:layout_marginLeft="10dp" />
           <TextView
               android:id="@+id/tenantPhone"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginStart="10dp"
               android:hint="Phone"
               android:textSize="15dp"
               android:textAlignment="textStart"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginLeft="10dp"
               tools:ignore="RtlCompat" />

       </LinearLayout>

       <LinearLayout
           android:id="@+id/thirdlinear"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_below="@+id/secondlinear"
           android:orientation="horizontal"
           android:background="@color/cardview_light_background"
           tools:ignore="UnknownId">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/ic_email"
               android:layout_marginStart="10dp"
               android:layout_marginLeft="10dp" />
           <TextView
               android:id="@+id/tenantEmail"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginStart="10dp"
               android:hint="Email"
               android:textSize="15dp"
               android:textAlignment="textStart"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_marginLeft="10dp" />

       </LinearLayout>
   </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>



