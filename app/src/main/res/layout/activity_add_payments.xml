<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPayments">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/Heavy_rain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme">

            <Button
                android:id="@+id/paymentCancelButton"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedborder"
                android:text="CANCEL"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/cardview_dark_background"
                android:textAlignment="center"
                android:text="Add Payment"
                android:layout_marginStart="80dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="16dp" />


            <Button
                android:id="@+id/paymentSaveButton"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedborder"
                android:text="SAVE"
                android:textColor="@color/green" />


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="57dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/firstlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />
                <EditText
                    android:id="@+id/paymentAmountEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:inputType="numberDecimal"
                    android:layout_marginStart="150dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/firstlinear"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paid with"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />

                <Spinner
                    android:id="@+id/paymentPaidwithSpin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="140dp"
                    android:gravity="start"
                    android:text="paid with"
                    android:textColor="@color/green"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/secondlinear"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date received"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/paymentDateReceivedTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:text="Select Date"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/thirdlinear"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received from"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />
                <EditText
                    android:id="@+id/paymentReceivedFromEdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="name"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/green"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/fourthlinear"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tax status"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />

                <Switch
                    android:id="@+id/paymentswitchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="110dp"
                    android:textColor="@color/green"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textOff=" Nontaxable "
                    android:textOn=" Taxable "
                    android:textSize="20sp"
                    android:thumb="@drawable/sw_thumb"
                    android:track="@drawable/rectangle_track"
                    android:showText="true"
                    tools:ignore="MissingPrefix,RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sixthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/fifthlinear"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/paymentNotesTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Add"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="170dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>