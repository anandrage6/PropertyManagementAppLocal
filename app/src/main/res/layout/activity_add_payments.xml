<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPayments">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme">

            <Button
                android:id="@+id/paymentCancelButton"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedborder"
                android:text="CANCEL"
                android:textColor="@color/green" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/cardview_light_background"
                android:textAlignment="center"
                android:text="Add Payment"
                android:textStyle="bold"
                android:layout_marginStart="80dp"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="16dp" />


            <Button
                android:id="@+id/paymentSaveButton"
                android:layout_width="72dp"
                android:layout_height="33dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedborder"
                android:text="SAVE"
                android:textColor="@color/green" />


        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="57dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/firstlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@color/cardview_light_background"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Amount"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />
                <EditText
                    android:id="@+id/paymentAmountEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:inputType="numberDecimal"
                    android:layout_marginStart="150dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/firstlinear"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Paid with"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />

                <Spinner
                    android:id="@+id/paymentPaidwithSpin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="140dp"
                    android:gravity="start"
                    android:text="paid with"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/green"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/secondlinear"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Date received"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/paymentDateReceivedTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:text="Select Date"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/thirdlinear"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Received from"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />
                <EditText
                    android:id="@+id/paymentReceivedFromEdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/green"
                    android:gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/fourthlinear"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tax status"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />

                <LinearLayout
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="130sp"
                    android:layout_marginLeft="50sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginEnd="0sp"
                        android:layout_marginRight="0sp"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/nontaxableRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_selector"
                            android:button="@color/cardview_light_background"
                            android:checked="true"
                            android:gravity="center"
                            android:onClick="onRadioButtonClicked"
                            android:text="NonTaxable"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/taxableRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/radio_button_right_selector"
                            android:button="@color/cardview_light_background"
                            android:gravity="center"
                            android:onClick="onRadioButtonClicked"
                            android:text="Taxable"
                            android:textColor="@color/cardview_dark_background"
                            android:textSize="15sp" />
                    </RadioGroup>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sixthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/fifthlinear"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Notes"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/paymentNotesTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Add"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="170dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>