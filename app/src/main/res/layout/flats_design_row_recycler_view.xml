<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/flatsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_floor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Floor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/floorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="15dp"
                    android:hint=" Floor"
                    android:inputType="text"
                    android:textAlignment="textEnd"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    android:gravity="end" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="332dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_flat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"

                    android:text="Flat No"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/flatNoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="85dp"
                    android:layout_marginEnd="15dp"
                    android:hint=" FlatNo"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Black"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_flatfacing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:text="Flat Facing"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/flatfacingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="15dp"
                    android:hint=" FlatFacing"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Black"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_bed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:text="No of Bedrooms"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/noofbedroomsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:hint=" Bedroom"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/Black"
                    android:gravity="end" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textOption"
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:background="@color/cardview_light_background"
            android:text="&#8942;"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>


</androidx.cardview.widget.CardView>