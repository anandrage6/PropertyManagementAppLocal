    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="2"
        android:layout_marginTop="180dp"
        android:background="?attr/colorButtonNormal"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/flatsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_floor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:text="Floor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/floorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="170dp"
                    android:layout_marginEnd="0dp"
                    android:hint=" Floor"
                    android:inputType="text"
                    android:textAlignment="textStart"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    android:gravity="end" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="332dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_flat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"

                    android:text="Flat No"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/flatNoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="155dp"
                    android:layout_marginEnd="0dp"
                    android:hint=" FlatNo"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_flatfacing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:text="Flat Facing"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/flatfacingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="130dp"
                    android:layout_marginEnd="0dp"
                    android:hint=" FlatFacing"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_bed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:text="No of Bedrooms"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/noofbedroomsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="93dp"
                    android:layout_marginEnd="0dp"
                    android:hint=" Bedroom"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="end" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textOption"
            android:layout_width="10dp"
            android:layout_height="60dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:background="@color/cardview_light_background"
            android:text="&#8942;"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>


</androidx.cardview.widget.CardView>