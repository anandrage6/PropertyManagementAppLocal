<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TenantFullDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="59sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">
            <LinearLayout
                android:id="@+id/firstlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_person" />
                <TextView
                    android:id="@+id/tenantNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/firstlinear"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_email" />
                <TextView
                    android:id="@+id/tenantEmailTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Email"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Thirdlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_below="@id/secondlinear"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_call" />
                <TextView
                    android:id="@+id/tenantPhoneTV"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Phone"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/fourthlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/Thirdlinear"
                android:layout_marginBottom="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rental Information"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_light_background"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/fourthlinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Lease Start"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/leaseStartTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Lease Start "
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textAlignment="textEnd"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sixthlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/fifthlinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Lease End"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/leaseEndTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:hint="Lease End "
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/seventhlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/sixthlinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rent Frequency"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/rentIsPaidTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Rent Frequency "
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eightlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/seventhlinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total Occupants"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/totaloccupantsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="occupants "
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ninelinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/eightlinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rent Amount"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/rentAmountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Rent "
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textAlignment="textEnd"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tenthlinear"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/ninelinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Security Deposit"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:id="@+id/depositTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Security Deposit "
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textAlignment="textEnd"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/eleveninear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_below="@id/tenthlinear"
                android:layout_marginBottom="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="0sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Notes"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/notesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:hint="Notes "
                    android:textAlignment="textEnd"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>