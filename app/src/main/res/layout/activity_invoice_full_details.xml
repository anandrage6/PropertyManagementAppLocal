<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceFullDetails">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">
            <LinearLayout
                android:id="@+id/firstlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/invoiceFullDetailsHide"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_roundplus" />

                    <LinearLayout
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="Title"
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textAlignment="textStart"
                            android:textSize="15dp"
                            tools:ignore="RtlCompat" />
                        <TextView
                            android:id="@+id/detailsTv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Details"
                            android:textAlignment="textStart"
                            android:lines="1"
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:textColor="@color/Black"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="0dp"
                        android:textSize="15dp"
                        android:textColor="@color/Black"
                        android:hint="Amount"
                        android:textAlignment="textEnd"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/firstlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_roundminus" />

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="Rent"
                    android:textSize="15dp"
                  android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/rentTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0.00"
                    android:layout_marginStart="40dp"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/thirdlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/secondlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_roundplus" />

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="Water Bill"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/waterTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0.00"
                    android:layout_marginStart="40dp"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/thirdlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_roundplus" />

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="Electricity Bill"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/electricityTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0.00"
                    android:layout_marginStart="40dp"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthlinear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/fourthlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_roundplus" />

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:text="Maintanance Charges"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    android:textAlignment="textStart"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/maintananceTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="0.00"
                    android:layout_marginStart="40dp"
                    android:textAlignment="textEnd"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sixthlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifthlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="239dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Invoice Issued"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/invoiceissuedDateTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:textAlignment="textEnd"
                    android:hint="Select Date"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="0dp"
                    tools:ignore="RtlCompat">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/seventhlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sixthlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="239dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Payment Due"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/paymentdueDateTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginStart="0dp"
                    android:textAlignment="textEnd"
                    android:hint="Select Date"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:layout_marginLeft="0dp"
                    tools:ignore="RtlCompat">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eightlinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seventhlinear"
                android:layout_marginTop="2dp"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="182dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Notes"
                    android:textAlignment="textStart"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/Black"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/noteTv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:gravity="center"
                    android:hint="Note"
                    android:textColor="@color/Black"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    tools:ignore="RtlCompat">
                </TextView>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>